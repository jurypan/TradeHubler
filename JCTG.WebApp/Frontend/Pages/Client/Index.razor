@page "/";
@inject ClientRepository _clientRepository;

<h3>Clients</h3>
@if (_clients.Count() <= 0)
{
    <p>No Clients available</p>
}
else
{
    <div class="row">
        @foreach (var Client in _clients)
        {
            <div class="col-md-3 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@Client.Name</h5>
                        <p class="card-text">@Client.Currency</p>
                        <p class="card-text">Balance: @Client.Balance</p>
                        <p class="card-text">Equity: @Client.Equity</p>
                        <div>
                            <a href="@($"Clients/{Client.ID}/History")" class="btn btn-primary ">History</a>
                            <a href="@($"Clients/{Client.ID}/Pairs")" class="btn btn-secondary">Pairs</a>
                            <a href="@($"Clients/{Client.ID}/Logs")" class="btn btn-light">Logs</a>
                        </div>
                        <div style="padding-top:10px;">
                            <a href="@($"Clients/{Client.ID}/Edit")" class="btn btn-success">Edit</a>
                            <a href="@($"Clients/{Client.ID}/Delete")" class="btn btn-danger">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

@code {
    private IEnumerable<Entity.Client> _clients = new List<Entity.Client>();

    protected async override Task OnInitializedAsync()
    {
        _clients = await _clientRepository.GetAllAsync(692803787);
    }
}
